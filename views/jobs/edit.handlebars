<div class="card card-body">
    <h3>Edit Job Details</h3>
    <form action='/jobs/{{id}}?_method=PUT' method="POST">
        <input type='hidden' name='_method' value='PUT'>
        <div class="form-group">
            <label for="company">Company</label>
            <input type='text' class='form-control' name='company' value='{{company}}' >
        </div>
        <div class="form-group">
            <label for="job_title">Job Title</label>
            <input type='text' class='form-control' name='job_title' value='{{job_title}}' >
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type='text' class='form-control' name='location' value='{{location}}'>
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class='form-control' name='details'>{{details}}</textarea>
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <input class='form-control' name='status' value='{{status}}'>
        </div>
        <div class="form-group">
            <label for="link">Link</label>
            <input class='form-control' name='link' value='{{link}}'>
        </div>
        <button type='submit' class='btn btn-primary'>Submit</button>
    </form>
</div>